<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>

  <p>
   <b><%= pluralize post.comments.count, "comment" %></b>
  </p>

  <p>
    <%# time_tag  %>
    <%# time-ago is used by local-time %>
    Posted <%= time_tag post.created_at, "data-local": "time-ago" %>
  </p>
</div>
